    }

    books = myBooks;
    shuffle(books);
    let booksToShow = books.slice(0,1);
    for (i = 0; i < booksToShow.length; i++) {
        let bookHtml = htmlFromBook(booksToShow[i]);
        $("#lhs-books-block").append(bookHtml);
    }
}

});
